[Unit]
Description=Market Sniper Trading Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/US-trading-Crypto/backend
EnvironmentFile=/opt/US-trading-Crypto/backend/.env
Environment="PYTHONPATH=/opt/US-trading-Crypto/backend"
ExecStart=/usr/bin/python3 /opt/US-trading-Crypto/backend/market_sniper.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
